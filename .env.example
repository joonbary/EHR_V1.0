# AIRISS MSA Service Configuration
AIRISS_SERVICE_URL=https://web-production-4066.up.railway.app
AIRISS_INTERNAL_URL=http://airiss.railway.internal

# For local development (uncomment when testing locally)
# AIRISS_SERVICE_URL=http://localhost:8003

# ==========================================
# AI MODEL CONFIGURATION
# ==========================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Claude (Anthropic) Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=2000

# Google Gemini Configuration
GOOGLE_AI_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro

# Azure OpenAI Configuration (선택적)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Local LLM Configuration (Ollama, LlamaCpp 등)
LOCAL_LLM_ENABLED=false
LOCAL_LLM_MODEL=llama2
LOCAL_LLM_ENDPOINT=http://localhost:11434

# ==========================================
# AI SERVICE SETTINGS
# ==========================================

# Default AI Provider (openai, anthropic, google, azure, local)
DEFAULT_AI_PROVIDER=openai

# AI Service Features
AI_ENABLE_CACHING=true
AI_CACHE_TTL=3600  # seconds
AI_MAX_RETRIES=3
AI_TIMEOUT=30  # seconds

# AI Safety Settings
AI_CONTENT_FILTER=true
AI_MAX_CONTEXT_LENGTH=32000
AI_ENABLE_LOGGING=true

# Cost Management
AI_MONTHLY_BUDGET_USD=100
AI_ALERT_THRESHOLD=80  # percentage

# ==========================================
# AI MODULE SPECIFIC SETTINGS
# ==========================================

# AI Insights Module
AI_INSIGHTS_ENABLED=true
AI_INSIGHTS_MODEL_OVERRIDE=  # 비워두면 DEFAULT_AI_PROVIDER 사용

# AI Predictions Module
AI_PREDICTIONS_ENABLED=true
AI_PREDICTIONS_MODEL_OVERRIDE=

# AI Interviewer Module
AI_INTERVIEWER_ENABLED=true
AI_INTERVIEWER_MODEL_OVERRIDE=

# AI Team Optimizer Module
AI_TEAM_OPTIMIZER_ENABLED=true
AI_TEAM_OPTIMIZER_MODEL_OVERRIDE=

# AI Coaching Module
AI_COACHING_ENABLED=true
AI_COACHING_MODEL_OVERRIDE=claude-3-opus-20240229  # 코칭은 Claude 사용 추천

# AIRISS Core
AIRISS_AI_ENABLED=true
AIRISS_AI_MODEL_OVERRIDE=