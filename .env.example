# Django 설정
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 데이터베이스 설정
DATABASE_URL=sqlite:///db.sqlite3

# OpenAI API 설정 (AI 챗봇 및 평가 피드백용)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo  # gpt-4 사용 시 더 나은 품질

# Redis 설정 (실시간 알림 기능용 - 선택사항)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# WebSocket 설정 (실시간 기능용 - 선택사항)
WEBSOCKET_URL=ws://localhost:8000/ws/
CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer

# AIRISS 서비스 설정
AIRISS_SERVICE_URL=https://web-production-4066.up.railway.app
AIRISS_INTERNAL_URL=http://airiss.railway.internal

# Railway 배포 설정 (선택사항)
RAILWAY_ENVIRONMENT=production
PORT=8000
